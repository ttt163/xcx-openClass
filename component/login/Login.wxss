/* component/login/Login.wxss */

.login {
  position: absolute;
  top: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
}

.mask {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.6);
  width: 100%;
  height: 100%;
}

.login-contain {
  position: absolute;
  z-index: 2;
  top: 30%;
 left: 50%;
  transform: translate3d(-50%, 0, 0);
  border-radius: 25rpx;
  background: #fff;
  width: 570rpx;
  padding: 40rpx 40rpx 30rpx 48rpx;
  box-sizing: border-box;
}

.login .logo {
  display: block;
  width: 336rpx;
  height: 64rpx;
  margin: 0 auto 52rpx;
}

.login .line {
  display: block;
  width: 482rpx;
  height: 1px;
}

.input-item {
  margin-bottom: 18rpx;
}

.input-item input {
  margin: 0;
  /* padding: 0; */
  display: block;
  /* padding: 6rpx 10rpx; */
  width: 482rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 52rpx;
  height: 52rpx;
}

.input-item .p-input {
  color: #999;
}

.btn {
  display: block;
  width: 468rpx;
  height: 74rpx;
  margin-top: 32rpx;
}
